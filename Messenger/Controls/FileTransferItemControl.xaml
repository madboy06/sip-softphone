<UserControl x:Class="Messenger.Controls.FileTransferItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="0 5 0 5">
    <Grid MaxHeight="35">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" MaxWidth="55" />
        </Grid.ColumnDefinitions>
        <Label Name="lblFilePath" VerticalAlignment="Center" MaxHeight="25" Grid.Column="0" >FilePath</Label>
        <ProgressBar Name="pgbProgress" Width="Auto" Height="15" Grid.Column="1"  />
        <Button Name="btnStop" MaxWidth="50" MaxHeight="20"  VerticalAlignment="Center" Grid.Column="2" Click="btnStop_Click">Stop</Button>
    </Grid>
</UserControl>
